<div class="wrapper">
  <div class="row container_newform">
    <%= simple_form_for (@coffee) do |c| %>

    <div class="photo_uploader col-md-3">
      <%= c.input :picture %>
      <%= c.input :picture_cache, as: :hidden %>
    </div>

      <% if @coffee.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @coffee.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div class="col-md-6">
      <div class="input_element_inline">
        <div class="input_element">
          <%= c.input :blend_name, label: 'Blend Name' %>
        </div>
        <div class="input_element">
          <%= c.input :tree, label: 'Arabica/Robusta', collection: ["Arabica", "Robusta"] %>
        </div>
      </div>

      <div class="input_element_inline">
        <div class="input_element">
          <%= c.input :provenance, label: 'Country of Origin' %>
        </div>
        <div class="input_element">
          <%= c.input :machine, label: 'Optimized for', collection: ["Bean expresso", "French press", "Filter", "Italian", "Aeropress"] %>
        </div>
      </div>

      <div class="input_element_inline">
        <div class="input_element">
        <%= c.input :flavour, collection: ["Sweet", "Fruity", "Bitter", "Citric"] %>
        </div>
        <div class="input_element">
        <%= c.input :intensity, collection: ["morning", "noon", "night"] %>
        </div>
      </div>

      <div class="input_element_inline">
        <div class="input_element">
          <%= c.input :stock, label: 'Availability per day' %>
        </div>
        <div class="input_element">
          <%= c.input :price_per_unit, label: 'Price' %>
        </div>
      </div>

      <div class="input_element">
        <%= c.input :description, label: 'Add a description' %>
      </div>


      <div class="input_element_btn">
        <%= c.submit "add a coffee", class: "btn btn-primary", id: "btn_validate" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

