<%= render "shared/purchase", coffee: @coffee %>
<div class="wrapper">
  <div class="container">
    <h1>Dicsover the coffee</h1>
    <h2>Drink <%= @coffee.blend_name %></h2>
    <div class="coffee-caracteristics">
      <ul>
        <li>Intensity: <%= @coffee.intensity %></li>
        <li>Best for: <%= @coffee.machine %> </li>
        <li>Flavour: <%= @coffee.flavour %> </li>
        <li>Tree: <%= @coffee.tree %> </li>
        <li>Provenance: <%= @coffee.provenance %> </li>
      </ul>
    </div>
    <div class="coffee-show-price"><%= @coffee.price_per_unit %> â‚¬
    </div>
    <div class="coffee-show-picture">
      <%= cl_image_tag @coffee.picture, :width=>200, :crop=>"scale"%>
    </div>
    <div class="coffee-show-description">
      <%= @coffee.description %>
    </div>

    <div class="coffee-show-roaster">
      <h1>Discover the roaster</h1>
      <div>
        <h2>Meet <%= @coffee.user.name %></h2>
      </div>
    </div>
  </div>

    <div class="card"
    <%= cl_image_tag @article.photo, height: 300, width: 400, crop: :fill %>
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
             url('<%= cl_image_path @article.photo, height: 300, width: 400, crop: :fill %>')">
      <div class="card-category">Popular</div>
      <div class="card-description">
        <h2>Some stuff</h2>
        <p>Very cool stuff, useful and smart</p>
      </div>
      <a class="card-link" href="#" ></a>
    </div>

</div>
