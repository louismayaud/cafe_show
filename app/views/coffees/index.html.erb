
<div class="wrapper">
  <div class="container">
    <div class="add_coffee">
       <h1>My coffees</h1>
      <%= link_to "Sell a new coffee".html_safe, "coffees/new", class: "add_coffee_btn" %>
    </div>
    <% if @coffees.count == 0 %>
      <p> You don't have any coffee to sell at the moment </p>
    <% else %>
      <% @coffees.each do |coffee| %>
        <div class="card-user">
          <div class= "image">
            <%= cl_image_tag coffee.picture, :width=>90, :height=>90, :crop=> :fill %>
          </div>

          <div class ="message-name">
            <p> <%= coffee.blend_name %></p>
          </div>
          <div class="characteristics">
            <div class="characteristics-name">
              <p>intensity: </p>
              <p>flavor: </p>
              <p>machine: </p>
            </div>
            <div class="characteristics-value">
              <p> <%= coffee.intensity.capitalize %></p>
              <p><%= coffee.flavour%></p>
              <p><%= coffee.machine%></p>
            </div>
            <div class ="message-description">
              <p width="50%"> <%= coffee.description %></p>
            </div>
            <div class = "boxes-number">
              <div class= "title-number">
                <p>price: </p>
                <p>stock: </p>
                <p>unit sold: </p>
              </div>
              <div class="number-number">
                <div class ="message-price">
                  <p><%= coffee.price_per_unit%>â‚¬</p>
                </div>
                <div class ="message-stock">
                  <p><%= coffee.stock %></p>
                </div>
                <div class ="message-stock">
                  <p><%= coffee.unit_sold %></p>
                </div>
              </div>
              <div class= "edit_delete">
                <p><%=link_to "<i class='fas fa-edit'></i>".html_safe, edit_coffee_path(coffee)%></p>
                <p><%=link_to "<i class='fas fa-trash-alt'></i>".html_safe, coffee_path(coffee), method: :delete, data: { confirm: "Are you sure?" } %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
