<div class="wrapper">
  <div class="container">
    <h1>Your coffee's order is: </h1>
    <div class="card-user">
      <div class ="message-name">
        <p> <%= @coffee.blend_name %></p>
      </div>
      <div class="characteristics">
        <div class="characteristics-name">
          <p>intensity: </p>
          <p>flavor: </p>
          <p>machine: </p>
        </div>
        <div class="characteristics-value">
          <p><%= @coffee.intensity%></p>
          <p><%= @coffee.flavour%></p>
          <p><%= @coffee.machine%></p>
        </div>
      </div>
      <div class ="message-description">
        <p width="50%"> <%= @coffee.description %></p>
      </div>
      <div class = "boxes-number">
        <div class= "title-number">
          <p>price: </p>
          <p>stock: </p>
          <p>unit sold: </p>
        </div>
        <div class="number-number">
          <div class ="message-price">
            <p><%= @coffee.price_per_unit%>â‚¬</p>
          </div>
          <div class ="message-stock">
            <p><%= @coffee.stock %></p>
          </div>
          <div class ="message-stock">
            <p><%= @coffee.unit_sold %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="div-for-btn">
      <p><%=link_to "Confirm purchase", coffee_path(@coffee), class: 'btn btn-success'%></p>
      <p><%=link_to "Back to the list", coffee_path(@coffee), class: 'btn btn-primary'%></p>
    </div>
  </div>
</div>
